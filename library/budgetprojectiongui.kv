<kvGrid>:

    first_name: first_name 
    last_name: last_name


    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "First Name: "

            TextInput:
                id: first_name
                multiline:False

            Label:
                text: "Last Name: "

            TextInput:
                id: last_name 
                multiline:False

        Button:
            text:"Submit"
            on_press: root.btn()